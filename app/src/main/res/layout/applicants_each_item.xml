<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_applicant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akhil Bhatnagar"
                android:textStyle="bold"
                android:maxLength="18"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_email_24"
                app:tint="@color/grey" />

                <TextView
                    android:id="@+id/tv_email_popUp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8.25dp"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="akhilbhatnagar2001@gmail.com"
                    android:maxLength="30"/>

        </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




        <RelativeLayout
            android:id="@+id/accept_image_btn_raltive_layout"
            android:layout_width="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="1dp"
            app:civ_border_color="@color/light_green"
            android:id="@+id/applicants_profile_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_default_photo"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/accept_icon_green"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/reject_btn_applicants"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/reject_icon_red"
            app:tint="@color/grey" />

</LinearLayout>

</RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_phone_24"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_user_MobileNo_popUp"
            android:textSize="12dp"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9306023063"
            android:layout_marginLeft="8.25dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            android:layout_marginStart="16dp"
            app:cardUseCompatPadding="true">


            <LinearLayout

                android:id="@+id/linear_layout_rating_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/dark_yellow"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp">


                <TextView
                    android:id="@+id/user_ratings_pOP_uP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="loading..."
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/baseline_star_24"
                    app:tint="@color/white" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey"
        android:layout_marginTop="20dp"/>

</LinearLayout>